// ---------- Z-index ----------
$z-nav: 100;
$z-card: 200;
$z-overlay: 400;
$z-modal: 1000;

// ---------- Component Tokens ----------
$card-bg: $color-surface;
$card-elevated-bg: $color-surface-2;
