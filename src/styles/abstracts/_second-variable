// ---------- Colors (Base) ----------
$color-bg: #080b14; // Deeper bluish-black background (darker tone for cinematic look)
$color-surface: #121529; // Main card background (rich navy-violet)
$color-surface-2: #1a1e33; // Elevated cards / overlays
$color-border: rgba(255, 255, 255, 0.06); // Subtle borders with less contrast

$color-text: #f5f7fa; // Light text for readability
$color-muted: #a0a4b8; // Muted subtitles (cool gray-violet)

$color-primary: #7aa2ff; // Soft neon blue (brand highlight)
$color-accent: #ffcd4a; // Golden-yellow for ratings/stars
$color-success: #31d67a; // Slightly vibrant green
$color-danger: #ff5c5c; // Soft red accent for errors/favorites removed

// Gradient overlay for hero section
$gradient-primary: linear-gradient(
  to top,
  rgba(8, 11, 20, 0.95) 0%,
  rgba(8, 11, 20, 0.6) 50%,
  rgba(8, 11, 20, 0.1) 100%
);

// ---------- Typography ----------
$font-sans: "Inter", "SF Pro Display", sans-serif;
$font-headings: "Poppins", "SF Pro Display", sans-serif;

$font-weight-regular: 400;
$font-weight-medium: 500;
$font-weight-semibold: 600;
$font-weight-bold: 700;

$lh-tight: 1.1;
